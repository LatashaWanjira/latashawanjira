<%= render "layouts/errors", :object => @blogpost %>

<%= form_for @blogpost do |f| %>
	<div class="form-group">
		<%= f.label :title %>	
		<%= f.text_field :title %>
	</div>
	
	<div class="form-group">
		<%= f.label :body %>	
	</div>
	<div class="form-group">
		<%= f.text_area :body, size: "60x12" %>
	</div>

	<%= f.submit %>
<% end %>
