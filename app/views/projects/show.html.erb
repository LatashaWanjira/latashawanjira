<% content_for(:title, "Project | Latasha Wanjira") %>

<div class="container-fluid project-show">
	<div class="col-md-6">
		<%= image_tag @project.image.url %>
	</div>
	<div class="col-md-6">
		<h2><%= @project.project_name %></h2>
		<p>Description: <%= @project.description %></p>
		<p>Link: <%= @project.link %></p>
	</div>
	<p>Technologies Used: <%= raw(@project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></p>

	<% if admin_signed_in?%>
		<p><%= link_to "Edit Project", edit_project_path %> | <%= link_to "Delete Project", project_path(@project), :data => { :confirm => "Are you sure you want to delete this project?", :method => "delete" } %></p>
	<% end %>
</div>
